<!doctype html>
<html>
  <head>
    <meta charset="utf-8" />
    <title>Short workouts - <%= shopData.shopName %></title>
    <link rel="stylesheet" href="/main.css" />
  </head>
  <body>
    <div class="layout">
      <aside class="sidebar">
        <h2><%= shopData.shopName %></h2>
        <nav>
          <a href="/">Home</a>
          <a href="/workouts/list">All workouts</a>
          <a href="/workouts/addworkout">Add workout</a>
          <a href="/workouts/search">Search workouts</a>
          <a href="/workouts/shortworkouts" class="active">Short workouts</a>
          <a href="/weather">Weather</a>
          <a href="/about">About</a>
          <% if (currentUser) { %>
            <a href="/users/list">Users</a>
            <a href="/users/audit">Login audit</a>
          <% } %>
        </nav>
      </aside>

      <div class="main">
        <header class="topbar">
          <div class="topbar-title">Short workouts (under 30 minutes)</div>
          <div class="topbar-auth">
            <% if (currentUser) { %>
              <span>Hi, <%= currentUser %></span>
              <a href="/users/logout">Logout</a>
            <% } else { %>
              <a href="/users/login">Login</a>
              <a href="/users/register">Register</a>
            <% } %>
          </div>
        </header>

        <main class="main-content">
          <h1>Short workouts (under 30 minutes)</h1>

          <ul class="workout-list">
            <% if (Array.isArray(shortWorkouts) && shortWorkouts.length) { %>
              <% shortWorkouts.forEach(function(workout) { %>
                <% var title = workout.title || 'Untitled workout'; %>
                <% var type = workout.activity_type || 'Unspecified activity'; %>
                <% var duration = workout.duration_minutes || 0; %>
                <% var intensity = workout.intensity || 'unspecified'; %>
                <% var date = workout.performed_at || ''; %>
                <li>
                  <strong><%= title %></strong>
                  â€” <%= type %>,
                  <%= duration %> mins,
                  intensity: <%= intensity %>
                  <% if (date) { %> (on <%= date %>) <% } %>
                </li>
              <% }) %>
            <% } else { %>
              <li>No short workouts found.</li>
            <% } %>
          </ul>

          <p>
            <a href="/workouts/addworkout">Add a workout</a> |
            <a href="/workouts/list">View all workouts</a> |
            <a href="/">Back to home</a>
          </p>
        </main>
      </div>
    </div>
  </body>
</html>
