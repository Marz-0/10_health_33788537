<!doctype html>
<html>
  <head>
    <meta charset="utf-8" />
    <title>Users - <%= shopData.shopName %></title>
    <link rel="stylesheet" href="/main.css" />
  </head>
  <body>
    <div class="layout">
      <aside class="sidebar">
        <h2><%= shopData.shopName %></h2>
        <nav>
          <a href="/">Home</a>
          <a href="/workouts/list">All workouts</a>
          <a href="/workouts/addworkout">Add workout</a>
          <a href="/workouts/search">Search workouts</a>
          <a href="/workouts/shortworkouts">Short workouts</a>
          <a href="/achievements/list">Achievements</a>
          <a href="/achievements/add">Add achievement</a>
          <a href="/achievements/report">Achievement report</a>
          <a href="/weather">Weather</a>
          <a href="/about">About</a>
          <a href="/users/list" class="active">Users</a>
          <a href="/users/audit">Login audit</a>
        </nav>
      </aside>

      <div class="main">
        <header class="topbar">
          <div class="topbar-title">Registered users</div>
          <div class="topbar-auth">
            <% if (currentUser) { %>
              <span>Hi, <%= currentUser %></span>
              <a href="/users/logout">Logout</a>
            <% } else { %>
              <a href="/users/login">Login</a>
              <a href="/users/register">Register</a>
            <% } %>
          </div>
        </header>

        <main class="main-content">
          <h1>Registered users</h1>

          <% if (Array.isArray(users) && users.length) { %>
            <ul class="book-list">
              <% users.forEach(function(user){ %>
                <li>
                  <strong><%= user.username %></strong>
                  - <%= user.first %> <%= user.last %> (<%= user.email %>)
                </li>
              <% }) %>
            </ul>
          <% } else { %>
            <p>No users found.</p>
          <% } %>

          <p style="margin-top:0.9rem;">
            <a href="/">Back to home</a>
          </p>
        </main>
      </div>
    </div>
  </body>
</html>
